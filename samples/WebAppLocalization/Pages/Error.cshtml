@page
@model ErrorModel
@{
    ViewData["Title"] = T["Error", TextContext.From("Pages")];
}

<h1 class="text-danger">@T["Error."]</h1>
<h2 class="text-danger">@T["An error occurred while processing your request."]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>@T["Request ID:"]</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@T["Development Mode"]</h3>
<p>
    @T["Swapping to the <strong>Development</strong> environment displays detailed information about the error that occurred."]
</p>
<p>
    <strong>@T["The Development environment shouldn't be enabled for deployed applications."]</strong>
    @T["It can result in displaying sensitive information from exceptions to end users. " +
    "For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> " +
    "and restarting the app."]
</p>
